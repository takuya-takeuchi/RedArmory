<controls:MetroWindow x:Class="RedArmory.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:command="http://www.galasoft.ch/mvvmlight"
                      xmlns:contents="clr-namespace:RedArmory.Views.Contents"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:viewModels="clr-namespace:RedArmory.ViewModels"
                      Title="{Binding Title}"
                      Width="1200"
                      Height="800"
                      MinWidth="1200"
                      MinHeight="800"
                      DataContext="{Binding Source={StaticResource Locator},
                                            Path=Main}"
                      IsEnabled="{Binding ElementName=_DialogHost,
                                          Path=IsOpen,
                                          Converter={StaticResource BooleanReverseConverter}}"
                      mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <command:EventToCommand Command="{Binding ClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <materialDesign:DialogHost x:Name="_DialogHost" Identifier="RootDialog">
        <Border Width="Auto"
                Height="Auto"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="{DynamicResource PrimaryHueDarkBrush}"
                BorderThickness="1">
            <Grid Width="Auto"
                  Height="Auto"
                  Margin="0,0,0,0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Background="{DynamicResource AccentColorBrush3}">
                    <ToggleButton Name="_ToggleButton"
                                  Height="{StaticResource HeaderBarHeight}"
                                  Margin="6 0 6 0"
                                  HorizontalAlignment="Left"
                                  Foreground="{StaticResource IdealForegroundColorBrush}"
                                  Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                    <ListBox Name="_NavigatorListBox"
                             Width="Auto"
                             Height="Auto"
                             Background="{DynamicResource AccentColorBrush3}"
                             BorderThickness="0"
                             SelectedIndex="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="viewModels:NavigatorViewModel">
                                <Grid Height="{StaticResource ListBoxItemHeight}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Viewbox Width="24"
                                             Height="24"
                                             Margin="6 0 6 0"
                                             VerticalAlignment="Center">
                                        <Path Width="40"
                                              Height="40"
                                              Data="{Binding IconPath}"
                                              Fill="{StaticResource IdealForegroundColorBrush}"
                                              Stretch="Uniform" />
                                    </Viewbox>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Width="80"
                                               Margin="16 0 6 0"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource IdealForegroundColorBrush}"
                                               Text="{Binding Name}"
                                               Visibility="{Binding ElementName=_ToggleButton,
                                                                    Path=IsChecked,
                                                                    Converter={StaticResource CollapsedIfFalse}}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
